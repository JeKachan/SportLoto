@{
    var controller = ViewContext.RouteData.Values["controller"].ToString();
    var action = ViewContext.RouteData.Values["action"].ToString();
}

<div class="navbar navbar-inverse navbar-fixed-top">
    <div class="container">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            @Html.ActionLink("Home", "Index", "Home", null,
                new { @class = "navbar-brand" + (controller.ToLower() == "home" && action.ToLower() == "index" ? " selected" : "") })
        </div>
        <div class="navbar-collapse collapse">
            <ul class="nav navbar-nav">
                <li @(controller.ToLower() == "home" && action.ToLower() == "about" ? "class=selected" : "")>
                    @Html.ActionLink("About", "About", "Home")
                </li>
                <li @(controller.ToLower() == "home" && action.ToLower() == "contact" ? "class=selected" : "")>
                @Html.ActionLink("Contact", "Contact", "Home")
                </li>
                <li @(controller.ToLower() == "ticket" ? "class=selected" : "")>
                @Html.ActionLink("Ticket", "Index", "Ticket")
                </li>
            </ul>
            @Html.Partial("_LoginPartial")
        </div>
    </div>
</div>
